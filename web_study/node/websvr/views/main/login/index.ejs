<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <section class="login-form">
        <h1>MY WEBSITE</h1>
        <div class="int-area">
            <input type="text" name="id" id="id" autocomplete="off" required onkeydown="clickEvent(event)">
            <label for="id">USER NAME</label>
        </div>
        <div class="int-area">
            <input type="password" name="pw" id="pw" autocomplete="off" required onkeydown="clickEvent(event)">
            <label for="pw">PASSWORD</label>
        </div>
        <div class="btn-area">
            <button id="btn">LOGIN</button>
        </div>
        <div class="caption">
            <a href="">Forgot Password?</a>
        </div>
        <script src="/js/login.js"></script>
    </section>
</body>

</html>